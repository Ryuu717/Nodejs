<%- include("../../includes/head", {pageTitle: "signup"}) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/user.css">
<script></script>
</head>
<body>
    <%- include('../../includes/header') %>
    <main>
        <h1>Create New Account</h1>
        <% if (inputData.errorMessage) { %>
          <section class="alert">
            <h2>Invalid Input</h2>
            <p><%= inputData.errorMessage %></p>
          </section>
        <% } %>
        <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" reqired >
            </p>
            <p>
                <label for="confirm-email">Confirm E-mail</label>
                <input type="email" id="confirm-email" name="confirm-email" value="<%= inputData.confirmEmail %>" reqired >
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="<%= inputData.password %>" reqired >
            </p>
            <hr>
            <p>
                <label for="fullname">Fullname</label>
                <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>" reqired >
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" id="street" name="street" value="<%= inputData.street %>" reqired >
            </p>
            <p>
                <label for="postal">Postal Code</label>
                <input type="text" id="postal" name="postal" value="<%= inputData.postal %>" reqired >
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" value="<%= inputData.city %>" reqired >
            </p>
            <button class="btn">Create Account</button>
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>
    </main>
    <%- include("../../includes/footer") %> 